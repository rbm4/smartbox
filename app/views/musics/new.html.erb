<div class="container">
  <%= form_for @music, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :title, "Título da música" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :music_file, "Arquivo" %>
        <%= f.file_field :music_file, class: 'form-control', accept: ".mp3" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Enviar', class: 'btn btn-default' %>
      </div>
    </div>
  </div>
  <% end %>
</div>